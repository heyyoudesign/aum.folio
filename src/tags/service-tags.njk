---
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /service-tags/{{ tag }}/
layout: base.njk
eleventyComputed:
  title: "Servizi taggati come «{{ tag }}»"
  metaDescription: "Tutti i servizi taggati come «{{ tag }}»"
---
<div class="page-container">
  {# Header #}
  <div class="tag-list tag-list--no-wrap">
    <h4 class="tag-list__title">Servizi taggati come: «{{ tag }}»</h4>
    <a class="btn btn--sm btn--danger" href="/servizi">rimuovi tag</a>
  </div>

  {# Projects #}
  {% from "macros/servicelist.njk" import servicelist %}
  {{ servicelist(services = collections[tag] | reverse) }}

  {# Footer #}
  <nav>
    <a href="{{ '/servizi/' | url }}">← Vai a tutti i servizi</a>
  </nav>
</div>
